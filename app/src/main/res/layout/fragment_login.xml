<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/xui_config_color_main_theme"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户登录"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/cancel_login_view"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="取消"
            android:textSize="18dp"
            android:clickable="true"
            android:textColor="@color/colorWhite"/>
    </FrameLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@drawable/item_bottom_border"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <EditText
            android:id="@+id/id_login_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="账号"
            android:textSize="20dp"
            android:textCursorDrawable="@drawable/input_cursor_color"
            android:background="@color/colorWhite" />
        <ImageView
            android:id="@+id/show_history_id_button"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/pull_down_logo"
            android:layout_gravity="right|center_vertical"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@drawable/item_bottom_border"/>
    <EditText
        android:id="@+id/password_login_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="密码"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/input_cursor_color"
        android:background="@color/colorWhite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@drawable/item_bottom_border"/>
    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:rb_radius="5dp"
        android:textColor="@color/colorWhite"
        android:clickable="true"
        app:rb_backgroundColor="@drawable/login_button_back_color_selector"
        android:text="登录"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/to_register_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="注册账号"
            android:textSize="16dp"
            android:clickable="true"
            android:textColor="@drawable/register_link_text_selector"/>
    </FrameLayout>
</LinearLayout>