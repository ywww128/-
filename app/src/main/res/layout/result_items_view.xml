<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/collect_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/collect_logo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/song_message_layout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name_view"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="left"
            android:textColor="@color/xui_config_color_main_theme" />

        <TextView
            android:id="@+id/artist_name_view"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:textColor="#807D7D"
            android:textSize="12dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/more_setting_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="@color/xui_config_color_main_theme" />

</LinearLayout>
