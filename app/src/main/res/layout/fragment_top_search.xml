<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_search_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/xui_config_color_main_theme"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_back_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/back_logo" />
    <EditText
        android:id="@+id/top_search_edit"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:textColorHint="#F6EEEE"
        android:text="0"
        android:textCursorDrawable="@drawable/input_cursor_color" />

    <Button
        android:id="@+id/top_search_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_action_search_white" />

</LinearLayout>
