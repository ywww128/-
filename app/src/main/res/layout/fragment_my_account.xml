<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.xuexiang.xui.widget.imageview.RadiusImageView
        android:id="@+id/user_head_photo"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:riv_is_circle="true"
        android:clickable="true"
        android:src="@drawable/keqing"/>
    <TextView
        android:id="@+id/login_text_view"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:text="还未登录，点击登录"
        android:textSize="20dp"
        android:textColor="#191212"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/item_top_bottom_border">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/song_playing_love_black"/>
        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:text="   我的喜欢" />
<!--        <TextView-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="60dp"-->
<!--            android:gravity="center"-->
<!--            android:text="100 >"-->
<!--            android:textSize="20dp"/>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/item_bottom_border">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/song_playing_love_black"/>
        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:text="   我的歌单"/>
        <!--        <TextView-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:layout_height="60dp"-->
        <!--            android:gravity="center"-->
        <!--            android:text="100 >"-->
        <!--            android:textSize="20dp"/>-->
    </LinearLayout>
    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/my_account_logout_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:clickable="true"
        android:text="退出登录"
        app:rb_backgroundColor="@color/deepRed"
        android:textColor="@color/colorWhite"/>
</LinearLayout>
